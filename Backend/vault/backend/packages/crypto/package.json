{
  "name": "@obscura/crypto",
  "version": "0.1.0",
  "description": "Post-quantum cryptographic primitives (WOTS+ and Merkle trees) for Obscura",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./wots": {
      "types": "./dist/wots/index.d.ts",
      "import": "./dist/wots/index.js"
    },
    "./merkle": {
      "types": "./dist/merkle/index.d.ts",
      "import": "./dist/merkle/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@noble/hashes": "^1.3.3"
  },
  "devDependencies": {
    "fast-check": "^3.22.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist",
    "src"
  ]
}
