{
  "name": "obscura",
  "version": "0.1.0",
  "description": "Post-quantum secure intent settlement system combining WOTS+, SIP, and minimal on-chain contracts",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples"
  ],
  "scripts": {
    "start": "node packages/backend/dist/server.js",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:crypto": "npm run test -w @obscura/crypto",
    "demo": "npm run demo -w @obscura/examples",
    "lint": "eslint packages/*/src/**/*.ts",
    "clean": "rm -rf packages/*/dist",
    "forge:build": "cd contracts/evm && forge build",
    "forge:test": "cd contracts/evm && forge test",
    "anchor:build": "cd contracts/solana && anchor build"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "vitest": "^1.0.0",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
