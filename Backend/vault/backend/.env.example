# ============================================
# Obscura Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# Solver Network
SOLVER_API_URL=https://solver.sip-protocol.org

# ============================================
# Ethereum / EVM Configuration
# ============================================
ETH_RPC_URL=https://eth.llamarpc.com
ETH_SETTLEMENT_CONTRACT=0x0000000000000000000000000000000000000000
ETH_VAULT_CONTRACT=0x0000000000000000000000000000000000000000

# ============================================
# Solana Configuration
# ============================================
# Use devnet for development
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_CLUSTER=devnet
# Use mainnet for production
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# SOLANA_CLUSTER=mainnet-beta

# SIP Settlement Program ID
SOLANA_PROGRAM_ID=SIPsettlement111111111111111111111111111111

# ============================================
# Helius Integration (Enhanced Solana RPC)
# https://www.helius.dev
# ============================================
# Get your API key at: https://dev.helius.xyz
HELIUS_API_KEY=your-helius-api-key
HELIUS_RPC_URL=https://devnet.helius-rpc.com/?api-key=your-helius-api-key
# Priority fee level: none, low, medium, high, veryHigh
HELIUS_PRIORITY_LEVEL=medium

# ============================================
# ZK Compression (Light Protocol)
# https://www.zkcompression.com
# ============================================
PHOTON_URL=https://devnet.helius-rpc.com/?api-key=your-helius-api-key
LIGHT_PROVER_URL=https://prover.lightprotocol.com
LIGHT_STATE_TREE_PUBKEY=
ENABLE_COMPRESSION=true
COMPRESSION_BATCH_SIZE=50

# Light Protocol Payer (for submitting compressed transactions)
# Generate with: solana-keygen new --outfile light-payer.json
# Then convert to base64: cat light-payer.json | base64
# IMPORTANT: Keep this secret! Fund with devnet SOL for transaction fees
LIGHT_PAYER_PRIVATE_KEY=

# ============================================
# Arcium Integration (Confidential Computing)
# https://docs.arcium.com
# ============================================
# Arcium Public Testnet on Solana Devnet
# Available cluster offsets: 123, 456, 789 (all on v0.5.1)
ARCIUM_CLUSTER_OFFSET=123
# Use Helius RPC for reliable transactions
ARCIUM_RPC_URL=https://devnet.helius-rpc.com/?api-key=your-helius-api-key
ARCIUM_APP_ID=obscura
ARCIUM_ENABLE_CSPL=true
ARCIUM_ENABLE_MPC_AUCTIONS=true
ARCIUM_MPC_TIMEOUT=30000

# Arcium Program ID (Devnet)
ARCIUM_PROGRAM_ID=arcaborPMqYhZbLqPKPRXpBKyCMgH8kApNoxp4cLKg
# Mempool size: Tiny, Small, Medium, Large
ARCIUM_MEMPOOL_SIZE=Tiny

# Deploy MXE to devnet:
# arcium deploy --cluster-offset 123 \
#   --keypair-path ~/.config/solana/id.json \
#   --rpc-url https://devnet.helius-rpc.com/?api-key=YOUR_KEY \
#   --mempool-size Tiny

# ============================================
# Batch Settlement Configuration
# ============================================
BATCH_MAX_SIZE=50
BATCH_MAX_WAIT_TIME=30000
BATCH_MIN_SIZE=1
BATCH_AUTO_SUBMIT=false

# ============================================
# Security & Keys
# ============================================
# Private Key (NEVER commit this!)
# PRIVATE_KEY=

# JWT secret for API authentication
JWT_SECRET=change-this-in-production

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=100
